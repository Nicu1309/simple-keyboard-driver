/dts-v1/;
/plugin/;

/ {
    compatible = "ti,beaglebone", "ti,beaglebone-black";

    /* identification */
    part-number = "BB-MINIDISPLAY";

    /* version */
    version = "00A0";
	

/* state the resources this cape uses */
	exclusive-use =
		/* the pin header uses */
		"P9.23",	/* lcd: gpio1_17 */
		"P9.22",	/* spi: spi0_sclk */
		"P9.18",	/* spi: spi0_d1 */
		"P9.17",	/* spi: spi0_cs0 */
		/* the hardware IP uses */
		"gpio1_17",
		"spi0";

    fragment@0 {
        target = <&am33xx_pinmux>;
        __overlay__ {
            spi0_pins_s0: spi0_pins_s0 {
                pinctrl-single,pins = <
                  0x044 0x10 /* LCD_RESET, OUTPUT_PULLUP | MODE0 */
                  0x150 0x30 /* spi0_sclk, INPUT_PULLUP | MODE0 */
                  0x158 0x10 /* spi0_d1, OUTPUT_PULLUP | MODE0 */
                  0x15c 0x10 /* spi0_cs0, OUTPUT_PULLUP | MODE0 */
                >;
            };
        };
    };

    fragment@1 {
        target = <&spi0>;
        __overlay__ {
             #address-cells = <1>;
             #size-cells = <0>;

             status = "okay";
             pinctrl-names = "default";
             pinctrl-0 = <&spi0_pins_s0>;

             spidev@0 {
                 spi-max-frequency = <24000000>;
                 reg = <0>;
                 compatible = "spidev";
             };
             spidev@1 {
                 spi-max-frequency = <24000000>;
                 reg = <1>;
                 compatible = "spidev";
             };
        };
    };
};
